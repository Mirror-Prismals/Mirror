import ddf.minim.*;
import ddf.minim.analysis.FFT;

Minim minim;
AudioPlayer player;
FFT fft;

// RGB values for each note
int[][] noteColors = {
  {78, 110, 130, 255},  // C
  {85, 120, 108, 255},  // C#/Db
  {124, 147, 86, 255},  // D
  {122, 147, 86, 255},  // D#/Eb
  {209, 184, 82, 255},  // E
  {224, 161, 98, 255},  // F
  {220, 160, 97, 255},  // F#/Gb
