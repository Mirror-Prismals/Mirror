cpp
Copy code
#include <iostream>
using namespace std;

int main() {
    int trees;
    cout << "How many trees do you want to plant? ";
    cin >> trees;

    for (int i = 1; i <= trees; i++) {
        cout << "Tree " << i << " planted!" << endl;
